<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDEBD0"
    android:padding="16dp">

    <ImageView
        android:id="@+id/backBtnDetail"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/back"
        android:contentDescription="Back"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/orderIdDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID: "
        android:textColor="#2E4058"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orderStatusDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: "
        android:textColor="#E0675E"
        android:textSize="16sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/orderAddressDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: "
        android:textColor="#2E4058"
        android:textSize="16sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/orderTotalDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: $0.00"
        android:textColor="#E0675E"
        android:textSize="16sp"
        android:layout_marginTop="4dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOrderItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp" />

</LinearLayout>
